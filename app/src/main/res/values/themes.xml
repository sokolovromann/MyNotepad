<resources>
    <style name="Theme.MyNotepad" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/blue_900</item>
        <item name="colorPrimaryVariant">@color/dark_blue_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/blue_900</item>
        <item name="colorSecondaryVariant">@color/dark_blue_900</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="background">@color/gray_200</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorError">@color/red_700</item>
        <item name="colorOnError">@color/white</item>
    </style>

    <style name="Theme.MyNotepad.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyNotepad.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyNotepad.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>